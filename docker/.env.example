# ===========================================
# Actual Flow Docker Configuration
# ===========================================
# Copy this file to .env and fill in your values
#
# FIRST RUN: Use interactive mode to configure credentials and map accounts:
#   docker compose run --rm -e ACTUAL_FLOW_MODE=interactive actual-flow
#
# All credentials (API keys, passwords, account mappings) are stored in
# data/config.json after the interactive setup.

# Timezone for cron schedule
TZ=UTC

# ===========================================
# Import Schedule
# ===========================================

# Cron schedule for automatic imports (default: daily at 6 AM)
# Examples:
#   "0 6 * * *"    - Daily at 6:00 AM (default)
#   "0 */6 * * *"  - Every 6 hours
#   "0 8,20 * * *" - Twice daily at 8 AM and 8 PM
#   "*/30 * * * *" - Every 30 minutes
ACTUAL_FLOW_CRON="0 6 * * *"

# Run import immediately when container starts (true/false)
ACTUAL_FLOW_RUN_ON_STARTUP=false

# ===========================================
# TLS Configuration
# ===========================================

# Set to 1 to enforce TLS certificate verification
# Set to 0 to skip verification (needed for self-signed certificates)
NODE_TLS_REJECT_UNAUTHORIZED=0
